<?xml version="1.0"?>
<!DOCTYPE waimea SYSTEM "@pkgdatadir@/waimea.dtd">

<waimea version="@pkgversion@">

  <pattern name="root-grad" type="linear" 
           start_x="50%" start_y="0"
           end_x="50%" end_y="100%"
           spread="none">
    <colorstop offset="0.0" color="#ffffff"/>
    <colorstop offset="1.0"  color="#828282"/>
  </pattern>

  <style name="root-background" cursor="left_ptr">
    <rectangle x="0" y="0" width="100%" height="100%"
               fill_pattern="root-grad"/>
    <svg x="25%" y="22.5%" width="50%" height="55%"
         file="freedesktop.svg"/>
  </style>

  <match target="root" window="^root$" name=".*" style="root-background"/>

</waimea>
